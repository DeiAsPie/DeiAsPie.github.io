{
  "name": "deaispie",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "hugo server -D",
    "build:css": "npx @tailwindcss/cli -i ./assets/css/main.css -o ./assets/gen/tailwind.css --minify",
    "build": "hugo",
    "build:prod": "npm run build:css && hugo --minify --gc",
    "size:css": "node -e \"const fs=require('fs');const b=fs.statSync('./assets/gen/tailwind.css').size;console.log((b/1024).toFixed(1)+' KiB');\"",
    "format": "prettier --write .",
    "test": "pytest -q"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/typography": "^0.5.16",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-go-template": "^0.0.15",
    "tailwindcss": "^4.1.13"
  }
}
